@require 'zorium-paper/base'

json('zorium-paper/colors.json')

.z-photo-modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.5)
  display: flex
  align-items: center

  > .overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

  > .border
    width: 100%
    background: black
    display: flex
    position: relative

    > .previous
      display: flex
      align-items: center
      flex: 1

      .icon.chevron-left
        color: white

    > .imgdiv
      height: 100%

      > .current-photo
        border: 0
        position: relative
        height: auto
        width: auto
        max-width: 300px
        max-height: 300px

    > .next
      display: flex
      align-items: center
      flex: 1

      .icon.chevron-right
        color: white
